<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.blogandchat.fragment.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.blogandchat.fragment.ChatFragment"
        android:label="chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.blogandchat.fragment.FavoriteFragment"
        android:label="favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.blogandchat.fragment.SearchFragment"
        android:label="search"
        tools:layout="@layout/fragment_search" />

</navigation>
