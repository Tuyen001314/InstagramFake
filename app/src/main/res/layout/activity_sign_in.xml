<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.SignInActivity">

    <ImageView
        android:id="@+id/img_sign_in"
        android:layout_width="182dp"
        android:layout_height="49dp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instagramlogo" />

    <EditText
        android:paddingStart="10dp"
        android:background="@drawable/custom_edit_text"
        android:id="@+id/edt_sign_in_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:textSize="14sp"
        android:ems="10"
        android:hint="@string/username"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sign_in"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/edt_sign_in_pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:background="@drawable/custom_edit_text"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_sign_in_name"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="right|top"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:text="Forgot password?"
        app:layout_constraintEnd_toEndOf="@+id/edt_sign_in_pass"
        app:layout_constraintTop_toBottomOf="@+id/edt_sign_in_pass" />

    <Button
        android:id="@+id/button_sign_in"
        style="@style/TintButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_button_rounded"
        android:text="Log in"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass" />

    <TextView
        android:id="@+id/textNotHaveAccount"
        android:textColor="#66000000"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Donâ€™t have an account? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_in" />

    <TextView
        android:id="@+id/sign_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Sign up."
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textNotHaveAccount"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_in" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
