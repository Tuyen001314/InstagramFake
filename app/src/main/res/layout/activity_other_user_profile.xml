<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/other_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OtherUserProfile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setup_toolbar">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewOther"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:src="@drawable/avt_img"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageFriend"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/avt_img"
                    app:layout_constraintStart_toStartOf="@+id/postCount"
                    app:layout_constraintTop_toBottomOf="@+id/postCount" />

                <TextView
                    android:id="@+id/followedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#272727"
                    android:lineSpacingExtra="-2sp"
                    android:layout_marginStart="16dp"
                    android:text="Followed by andreagarcia_78"
                    app:layout_constraintStart_toEndOf="@+id/circleImageFriend"
                    app:layout_constraintTop_toTopOf="@+id/circleImageFriend" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonFollow"
                    android:layout_width="180dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_curved_12dp_gray"
                    android:backgroundTint="#F5F5F5"
                    android:gravity="center"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="#272727"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/circleImageFriend"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageFriend" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonMessage"
                    android:layout_width="180dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_curved_12dp_gray"
                    android:backgroundTint="#F5F5F5"
                    android:gravity="center"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textColor="#272727"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonFollow"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageFriend" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewAddFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:visibility="visible"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/joined_aug_"
                    app:layout_constraintTop_toTopOf="@+id/nameUserOther">

                    <ImageView
                        android:id="@+id/addFriend"
                        style="@style/ButtonFollowStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:src="@drawable/ic_baseline_person_add_alt_1_24" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lineSpacingExtra="-2sp"
                    android:text="lauritisreyes"
                    android:textColor="#686868"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@+id/nameUserOther"
                    app:layout_constraintTop_toBottomOf="@+id/nameUserOther" />

                <TextView
                    android:id="@+id/born_26_nov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lineSpacingExtra="-2sp"
                    android:text="Born 26 Nov. 1996"
                    android:textColor="#686868"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@+id/nick_name"
                    app:layout_constraintTop_toBottomOf="@+id/nick_name" />

                <TextView
                    android:id="@+id/joined_aug_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lineSpacingExtra="-2sp"
                    android:text="Joined Aug. 2020"
                    android:textSize="14sp"
                    android:textColor="#686868"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/born_26_nov"
                    app:layout_constraintTop_toTopOf="@+id/born_26_nov" />

                <TextView
                    android:id="@+id/nameUserOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Laura Reyes"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/circleImageViewOther"
                    app:layout_constraintTop_toTopOf="@+id/circleImageViewOther" />

                <TextView
                    android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:textColor="#686868"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/postCount"
                    app:layout_constraintStart_toEndOf="@+id/postCount"
                    app:layout_constraintTop_toTopOf="@+id/postCount" />

                <TextView
                    android:id="@+id/postCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="3"
                    android:textColor="#272727"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/description"
                    app:layout_constraintTop_toBottomOf="@+id/description" />

                <TextView
                    android:id="@+id/following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Following"
                    android:textColor="#686868"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/followingCount"
                    app:layout_constraintStart_toEndOf="@+id/followingCount"
                    app:layout_constraintTop_toTopOf="@+id/followingCount" />

                <TextView
                    android:id="@+id/followingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="32dp"
                    android:text="3"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/follower"
                    app:layout_constraintTop_toBottomOf="@+id/description" />

                <TextView
                    android:id="@+id/follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textColor="#686868"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/followerCount"
                    app:layout_constraintStart_toEndOf="@+id/followerCount"
                    app:layout_constraintTop_toTopOf="@+id/followerCount" />

                <TextView
                    android:id="@+id/followerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="10"
                    android:textColor="#272727"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginStart="32dp"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toEndOf="@+id/post"
                    app:layout_constraintTop_toBottomOf="@+id/description" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#272727"
                    android:lineSpacingExtra="-2sp"
                    android:text="UX UI Designer with Frontend Skills"
                    app:layout_constraintStart_toStartOf="@+id/circleImageViewOther"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageViewOther" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.75">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabGravity="fill"
                    app:tabMode="scrollable" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewOtherProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
