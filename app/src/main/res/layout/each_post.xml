<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_more_px"
                    app:layout_constraintBottom_toTopOf="@+id/user_post"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/avt_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="we_are_sulcus"
                    android:textColor="#272727"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/profile_pic"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="11/12/2022"
                    android:textColor="#CC272727"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_username" />

                <ImageView
                    android:id="@id/user_post"
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avt_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_pic" />

                <TextView
                    android:id="@+id/see_transla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Translation"
                    android:textColor="#272727"
                    android:textSize="11sp"
                    android:layout_marginStart="3dp"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_27"
                    app:layout_constraintTop_toTopOf="@+id/x_hours_ago" />

                <TextView
                    android:id="@+id/tv_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="we_are_sulcus #menowhere"
                    android:textColor="#272727"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/img_view_like"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_like"
                    app:layout_constraintVertical_bias="0.2" />

                <TextView
                    android:id="@+id/x_hours_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3 hours ago"
                    android:textColor="#686868"
                    android:layout_marginTop="8dp"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_caption"
                    app:layout_constraintTop_toBottomOf="@+id/tv_caption" />

                <ImageView
                    android:id="@+id/ellipse_27"
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:background="#686868"
                    android:src="@drawable/ic_dot"
                    android:layout_marginStart="3dp"
                    app:layout_constraintBottom_toBottomOf="@id/x_hours_ago"
                    app:layout_constraintTop_toTopOf="@id/x_hours_ago"
                    app:layout_constraintStart_toEndOf="@+id/x_hours_ago"/>

                <ImageView
                    android:id="@+id/img_view_like"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_post"
                    app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

                <ImageView
                    android:id="@+id/img_view_comment"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_share"
                    app:layout_constraintStart_toEndOf="@+id/img_view_like"
                    app:layout_constraintTop_toTopOf="@+id/img_share"
                    app:layout_constraintVertical_bias="0.5"
                    app:srcCompat="@drawable/ic_comment" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/img_view_comment"
                    app:layout_constraintTop_toTopOf="@+id/img_bookmark"
                    app:srcCompat="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/img_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_bookmark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_post" />

                <ImageButton
                    android:id="@+id/image_button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/user_post"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>